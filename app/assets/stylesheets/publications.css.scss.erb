.publications-wrapper {
  background: white;
  padding-bottom: 100px;
  margin-top: -85px;
  position: relative;
}
.publication-sidebar li {
  list-style: none;
    padding: 0px 1px 0px 0px;
    width: 33%;
    display: inline-block;
}
.columns.large-4.image {
    padding-top: 12px;
}
.publication-date {
    color: #959595;
    font-size: 18px;
    font-weight: 200;
    font-style: italic;
}
.columns.large-8.content p {
    color: #666666;
    font-weight: 300;
    font-size: 18px;
}
.columns.large-8.content {
    padding-bottom: 100px;
}
.publication-article-wrapper .title {
    margin-left: -30px;
}
.publication-article-wrapper .title h2 {
    font-size: 22px;
    font-weight: 500;
    padding: 11px 0 12px 28px;
}
.publication-items {
    padding: 60px 0 70px 0;
}
.publication-item .columns.large-8 p {
    color: #666666;
    font-weight: 300;
    line-height: 21px;
}
.publication-item .columns.large-4 {
    padding-top: 4px;
}
.publication-item h4 a {
    font-size: 18px;
    font-weight: 500;
}
.columns.large-6.publication-item {
    padding-bottom: 45px;
}
.columns.large-6.publication-item img {
    padding-bottom: 8px;
}
.publication-item .publication-date {
    font-size: 16px;
    font-style: normal;
    font-weight: 100;
}
.columns.large-8.content iframe {
    padding-right: 1.6rem;
}
.publication-article-wrapper .columns.large-4.image img {
    width: 100%;
}
.publication-sidebar li a {
  padding: 8px 0 8px 22px;
  display: block;
  background: #ebebeb;
  font-size: 20px;
  color: #004684;
  font-weight: 200;
}
.publication-sidebar li a:hover {
    text-decoration: underline;
}
#publication-sidebar .active_menu:hover {color: white !important;}
.columns.large-9.publications p {
    min-height: 1000px;
}
.slides-container {
    height: 400px!Important;
}
.publication-slider-wrapper {
    margin-left: -29px;
    width: 106%;
    background: #c5c5c5;
    height: 450px;
    position: relative;
}
.publication-slider-content {
    width: 30%;
    background: #014785;
    height: 100%;
    float: right;
    position: relative;
    right: 20%;
}
.publication-slider-content-inner {
    width: 72%;
    margin: 25px;
}
.publication-slider-content-inner h3, .publication-slider-content-inner p {color: white;}
.publication-slider-content-read-more a img {
    width: 45px!important;
    height: 45px!important;
}
#helpful_articles_slider {
    width: 94%!important;
    margin: 0 auto;
    height: 400px!important;
    padding-top: 25px;
}
.helpful_articles h5 {
    font-weight: 500;
    line-height: 24px;
    padding: 0;
    margin: 0;
    margin-bottom: 4px;
}
.helpful_articles h5 a {
    color: #005baa;
    font-size: 18px;
    border-bottom: 1px solid rgba(0,91,170, 0.3);
    transition: 0.6s ease-out all;
    -webkit-transition: 0.6s ease-out all;
}
.helpful_articles h5 a:hover {
    border-bottom: 1px solid rgba(0,91,170, 0.7);
}
.helpful_articles span {
    font-size: 14px;
    color: #c2c2c2;
}
.helpful_articles .image {
    height: 215px;
    margin: 25px 0px 25px 0px;
}
.helpful_articles .image img {
    min-height: 215px;
}
.helpful_articles {
    padding-top: 80px;
}
.helpful_articles p, .helpful_articles p strong {
    color: #666666;
    font-size: 16px;
    font-weight: 100!important;
}
.float_left .columns.large-6.video iframe {
    margin-left: 20%;
}
.float_right .columns.large-6.video iframe {
    margin-right: 20%;
}
.float_right .columns.large-6.video {
    float: right;
}
.useful_video_item h5 {
    color: #005baa;
    font-size: 18px;
    font-weight: 500;
    margin: 0;
    padding-bottom: 5px;
}
.useful_video_item span {
    font-size: 14px;
    color: #c2c2c2;
    font-weight: 100;
    font-style: italic;
    display: block;
    padding-bottom: 10px;
}
.useful_video_item p {
    color: #666666;
    font-size: 16px;
    font-weight: 100 !important;
}
.row.useful_video_item.float_right .content {
    padding-left: 70px;
}
.row.useful_video_item.float_left .content {
    padding-right: 60px;
}
.useful_video_item {
    padding: 40px 0 40px 0;
}
.columns.large-6.video object embed {
    height: 358px!important;
}