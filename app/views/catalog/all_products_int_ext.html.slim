.fixed-row.row.catalog-wrapper
  -if seo_meta_tags
    -seo_meta_tags.each do |s|
      = m_title "#{s.int_ext_title}"
      = meta_keywords "#{s.int_ext_keyword}"
      = meta_description "#{s.int_ext_description}"
  .columns
    .row
      = render :partial => 'partials/catalog_sidebar'
      .columns.large-8.medium-8.small-8
        .catalog-content-title-wrapper
          .line-wrapper
            .line
          .catalog-content-title-inner
            .titles
              h3.interior_title
                |Iнтер'ер
              h4 = @current_sub_catalog.name
            .image.box-shadow-right-bottom
              img src=@main_catalog.image.url
            .clearfix
          .clearfix
        .curent-brand-descriptions
          = raw @current_brand.text_to_brand
        .catalog-content-wrapper.int-ext-content-wrapper
          -@it_et.each do |ie|
            .columns.large-4.medium-4.small-4.ie-one-item.float-left
              a.fancybox href="#ie-id#{ie.id}"  rel="int-group"
                img src=ie.image_structure.url(:thumb)
                .ie-title-info
                  h3
                    span.starbud-link = ie.name
                    p
                      |(&nbsp;
                      = ie.cpde_product
                      |&nbsp;)
                    .ie-title-info
            div style="display: none"
              div id="ie-id#{ie.id}"  rel="int-group"
                .fixed-row.row.floor-one-item-wrapper
                  .columns
                    .columns.large-5.medium-5.small-5
                      h5.int-ext-l =ie.name
                      h4.int-ext-code
                        |(&nbsp;
                        = ie.cpde_product
                        |&nbsp;)
                      .int-image-wrap
                        h4.int-ext-s
                          |Інтер'єр
                        .int-image
                          img.header-box-shadow-right-bottom src=ie.image_interior.url alt=ie.alt_inter title=ie.title_inter
                    .columns.large-7.medium-7.small-7
                      h5.int-ext-l
                        |Структура
                      .struct-image
                        img.header-box-shadow-right-bottom src=ie.image_structure.url(:large)  alt=ie.alt_struct title=ie.title_struct

        .columns.about-int-ext-wrapper
          = raw @subcat.description